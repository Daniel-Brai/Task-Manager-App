<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg transition-all duration-200 ease-in" id="notice"><%= notice %></p>
    <% end %>

    <%= link_to 'Back to tasks', tasks_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
    <h1 class="font-bold my-3 text-4xl">View task</h1>

    <%= render @task %>

    <%= link_to 'Edit task', edit_task_path(@task), class: "mt-2 rounded-lg py-3 px-5 bg-green-100 hover:bg-green-200 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete task', task_path(@task), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-100 hover:bg-red-200 font-medium" %>
    </div>
    
  </div>
</div>
