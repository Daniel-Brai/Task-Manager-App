<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Completed:</strong>
    <%= task.completed %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "View task", task, class: "rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 inline-block font-medium" %>
    <%= link_to 'Edit task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 hover:bg-gray-200 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
